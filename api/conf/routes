# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET     /posts                        controllers.PostController.posts
GET     /posts/:id                    controllers.PostController.post(id: reactivemongo.bson.BSONObjectID)

# Swagger docs
GET       /                           controllers.ApiDocsController.redirectToDocs
GET       /swagger.json               controllers.ApiHelpController.getResources
GET       /api-docs                   controllers.ApiDocsController.redirectToDocs

GET       /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)